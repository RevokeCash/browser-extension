{
  "manifest_version": 3,
  "__firefox__manifest_version": 2,

  "name": "__MSG_name__",
  "description": "__MSG_description__",
  "default_locale": "en",

  "__firefox__browser_specific_settings": {
    "gecko": { "id": "webextension@revoke.cash" }
  },

  "icons": {
    "48": "images/icon-48.png",
    "128": "images/icon-128.png",
    "256": "images/icon-256.png"
  },

  "__chrome__action": {
    "default_icon": {
      "48": "images/icon-48.png",
      "128": "images/icon-128.png",
      "256": "images/icon-256.png"
    },
    "default_popup": "popup.html"
  },
  "__firefox__browser_action": {
    "default_icon": {
      "48": "images/icon-48.png",
      "128": "images/icon-128.png",
      "256": "images/icon-256.png"
    },
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["*://meet.google.com/*"],
      "js": [
        "js/content-scripts/inject-scripts.js",
        "js/content-scripts/window-ethereum-messages.js",
        "js/content-scripts/bypass-check.js",
        "js/content-scripts/antiphish.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": ["https://etherscan.io/*", "https://*.etherscan.io/*"],
      "js": ["js/content-scripts/etherscan-poison-detector.js"],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.google.com/search*"],
      "js": ["js/content-scripts/google-sponsored-detector.js"],
      "all_frames": true,
      "run_at": "document_idle"
    },
    {
      "matches": ["*://dexscreener.com/*"],
      "js": ["js/content-scripts/dexscreener-ad-highlighter.js"],
      "all_frames": true,
      "run_at": "document_idle"
    },
    {
      "matches": ["*://www.coingecko.com/*", "*://coingecko.com/*"],
      "js": ["js/content-scripts/coingecko-ad-highlighter.js"],
      "all_frames": true,
      "run_at": "document_idle"
    },
    {
      "matches": ["*://dextools.io/*", "*://www.dextools.io/*"],
      "js": ["js/content-scripts/dextools-ad-highlighter.js"],
      "all_frames": true,
      "run_at": "document_idle"
    },
    {
      "matches": ["*://twitter.com/*", "*://x.com/*"],
      "js": ["js/content-scripts/twitter-op-detector.js", "js/content-scripts/ethos-score.js"],
      "all_frames": false,
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://platform.twitter.com https://cdn.syndication.twimg.com; object-src 'self'; connect-src 'self' https://cdn.syndication.twimg.com https://api.twitter.com; img-src 'self' data: https://pbs.twimg.com https://abs.twimg.com; style-src 'self' 'unsafe-inline' https://platform.twitter.com; frame-src 'self' https://platform.twitter.com https://syndication.twitter.com"
  },

  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": [
        "js/injected/proxy-injected-providers.js",
        "confirm.html",
        "js/pages/confirm.js",
        "js/vendor.js",
        "assets/*",
        "onboarding/feature-toggle-bindings.js",
        "public/images/*",
        "images/*"
      ]
    }
  ],
  "__firefox__web_accessible_resources": [
    "js/injected/proxy-injected-providers.js",
    "confirm.html",
    "js/pages/confirm.js",
    "js/vendor.js",
    "assets/*",
    "public/images/*",
    "images/*"
  ],

  "background": {
    "__chrome__service_worker": "js/background.js",
    "__firefox__scripts": ["js/background.js"]
  },

  "permissions": ["storage", "windows", "alarms"],
  "__firefox__permissions": ["<all_urls>", "storage", "tabs"],

  "__chrome__host_permissions": [
    "<all_urls>",
    "https://api.tenderly.co/*",
    "https://api.ethos.network/*",
    "https://api.test.fairside.dev/*",
    "https://api.fairside.io/*"
  ]
}
